<main id="main" class="main">

    <div class="pagetitle">
        <h1>{{title}}</h1>

    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <h3 class="card-title">Guruhlar qo'shish</h3>
                            <p>Guruhlar qo'shish uchun qo'shish tugmachasini bosing</p>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#addworker">
                                Qo'shish
                            </button>
                        </div>
                        <div class="modal fade" id="addworker" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Guruhlar qo'shish</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <form action="/group/create" method="POST">
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label class="form-label" for="">Guruh nomi</label>
                                                <input class="form-control" type="text" name="title" required>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label" for="">Guruh haqida malumot</label>
                                                <textarea class="form-control" name="descr" required></textarea>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label" for="">Tarbiyachi</label>
                                                <select class="form-select" name="teacher">
                                                    {{#each workers}}
                                                    <option value="{{_id}}">{{fullname}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Qaytish</button>
                                            <button type="submit" class="btn btn-primary">Qo'shish</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div><!-- End Basic Modal-->

                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Guruhlar Ro'yhati</h3>
                        <p>Bu sahifada guruhlar ro'yhatini ko'rishiz mumkin</p>
                        <!-- Bordered Table -->
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Guruh nomi</th>
                                    <th scope="col">Guruh haqida ma'lumot</th>
                                    <th scope="col">Tarbiyachilar</th>
                                    <th scope="col">O'zgartirish</th>
                                    <th scope="col">O'chirish</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each groups}}
                                <tr>
                                    <th scope="row">{{@index}}</th>
                                    <td>{{title}}</td>
                                    <td>{{descr}}</td>
                                    <td>
                                        {{#if teacher}}
                                        <ol>
                                            {{#each teacher}}
                                            <li>{{fullname}}</li>
                                            {{/each}}
                                        </ol>
                                        {{else}}
                                        -
                                        {{/if}}
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#update-{{@index}}">
                                            <i class="ri-edit-box-fill"></i>
                                        </button>
                                        <div class="modal fade" id="update-{{@index}}" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Guruhni malumotlarini o'zgartirish</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <form action="/group/update/{{_id}}" method="POST">
                                                        <div class="modal-body">
                                                            <div class="mb-3">
                                                                <label class="form-label" for="">Guruh nomi</label>
                                                                <input class="form-control" type="text" name="title"
                                                                    required value="{{title}}">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label" for="">Guruh haqida
                                                                    malumot</label>
                                                                <textarea class="form-control" name="descr"
                                                                    required>{{descr}}</textarea>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label" for="">Tarbiyachi</label>
                                                                <select class="form-select" name="teacher">
                                                                    {{#each ../ workers}}
                                                                    <option value="{{_id}}">{{fullname}}</option>
                                                                    {{/each}}
                                                                </select>
                                                            </div>

                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Qaytish</button>
                                                            <button type="submit"
                                                                class="btn btn-primary">Qo'shish</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div><!-- End Basic Modal-->
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                            data-bs-target="#delete-{{@index}}">
                                            <i class="ri-delete-bin-fill"></i>
                                        </button>
                                        <div class="modal fade" id="delete-{{@index}}" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Bolani malumotlarini o'chirish</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <form action="/group/delete/{{_id}}" method="POST">
                                                        <div class="modal-body">
                                                            <h4>Haqiqatdan ham O'chirmoqchimisiz</h4>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Qaytish</button>
                                                            <button type="submit"
                                                                class="btn btn-danger">O'chirish</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div><!-- End Basic Modal-->
                                    </td>
                                    <!-- Basic Modal -->

                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <!-- End Bordered Table -->
                    </div>
                </div>
            </div>

        </div>
    </section>

</main><!-- End #main -->