<main id="main" class="main">

    <div class="pagetitle">
        <h1>{{title}}</h1>

    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Ariza Qoldirgan Bolalar Ro'yhati</h3>
                        <p>Bu sahifada ariza qoldirgan bolalar ro'yhatini ko'rishiz mumkin</p>
                        <!-- Bordered Table -->
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Ism Familiyasi</th>
                                        <th scope="col">Tugilgan sanasi</th>
                                        <th scope="col">Tell raqami</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">Arizasi</th>
                                        <th scope="col">Arizasini qabul qilish</th>
                                        <th scope="col">O'chirish</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each childrenOrders}}
                                    <tr>
                                        <th scope="row">{{@index}}</th>
                                        <td>{{fullname}}</td>
                                        <td>{{birth}}</td>
                                        <td>{{phone}}</td>
                                        <td>{{adress}}</td>
                                        <td>{{descr}}</td>
                                        <td>
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                data-bs-target="#update-{{@index}}">
                                                <i class="ri-edit-box-fill"></i>
                                            </button>
                                            <div class="modal fade" id="update-{{@index}}" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Bolani malumotlarini o'zgartirish
                                                            </h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <form action="/children/create/order/{{_id}}" method="POST">
                                                            <div class="modal-body">
                                                                <div class="mb-3">
                                                                    <label class="form-label" for="">Ism
                                                                        Familiya</label>
                                                                    <input class="form-control" type="text"
                                                                        name="fullname" required value="{{fullname}}">
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label" for="">Tug'ulgan
                                                                        sanasi</label>
                                                                    <input class="form-control" type="date" name="birth"
                                                                        required value="{{birth}}">
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label" for="">Kelgan
                                                                        sanasi</label>
                                                                    <input class="form-control" type="date" name="date"
                                                                        required value="{{date}}">
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label" for="">Oylik
                                                                        to'lovi</label>
                                                                    <input class="form-control" type="number"
                                                                        name="amount" required value="{{amount}}">
                                                                </div>
                                                                <select class="form-select" name="groups">
                                                                    {{#each ../groups}}
                                                                    <option value="{{_id}}">{{title}}</option>
                                                                    {{/each}}
                                                                </select>


                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Qaytish</button>
                                                                <button type="submit"
                                                                    class="btn btn-primary">Qo'shish</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div><!-- End Basic Modal-->
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                                data-bs-target="#delete-{{@index}}">
                                                <i class="ri-delete-bin-fill"></i>
                                            </button>
                                            <div class="modal fade" id="delete-{{@index}}" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Bolani malumotlarini o'chirish</h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <form action="/order/delete/{{_id}}" method="POST">
                                                            <div class="modal-body">
                                                                <h4>Haqiqatdan ham O'chirmoqchimisiz</h4>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Qaytish</button>
                                                                <button type="submit"
                                                                    class="btn btn-danger">O'chirish</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div><!-- End Basic Modal-->
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <!-- End Bordered Table -->
                    </div>
                </div>
            </div>


        </div>
    </section>

</main><!-- End #main -->